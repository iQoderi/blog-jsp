<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"

         xmlns="http://java.sun.com/xml/ns/javaee"

         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee

http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>org.seven.web.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!--start-->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.seven.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BackstageServlet</servlet-name>
        <servlet-class>org.seven.web.BackstageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackstageServlet</servlet-name>
        <url-pattern>/backstage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticleServlet</servlet-name>
        <servlet-class>org.seven.web.ArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleServlet</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddArticleServlet</servlet-name>
        <servlet-class>org.seven.web.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddArticleServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AboutMeServlet</servlet-name>
        <servlet-class>org.seven.web.AboutMeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutMeServlet</servlet-name>
        <url-pattern>/about</url-pattern>>
    </servlet-mapping>
    <servlet>
        <servlet-name>GbookServlet</servlet-name>
        <servlet-class>org.seven.web.GbookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GbookServlet</servlet-name>
        <url-pattern>/gbook</url-pattern>>
    </servlet-mapping>
</web-app>
